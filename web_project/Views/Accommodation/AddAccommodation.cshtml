@{
    ViewBag.Title = "Add Accommodation";
    var arrangementId = ViewBag.ArrangementId;
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Add Accommodation</h2>

    <form action="@Url.Action("AddAccommodation", "Accommodation")" method="post">
        <input type="hidden" name="ArrangementId" value="@arrangementId" />

        <div class="card shadow mb-4" style="max-width: 600px; margin:auto;">
            <div class="card-header text-center">
                <h3>Accommodation Details</h3>
            </div>
            <div class="card-body">
                <div class="mb-3 text-center">
                    <label class="form-label fw-bold">Name</label>
                    <input type="text" class="form-control mx-auto" style="max-width: 200px;" name="Name" required />
                </div>
                <div class="mb-3 text-center">
                    <label class="form-label fw-bold">Number of Stars</label>
                    <input type="number" class="form-control mx-auto" style="max-width: 200px;" name="NumberOfStars" min="1" max="5" required />
                </div>
                <div class="mb-3 text-center">
                    <label class="form-label fw-bold">Accommodation Type</label>
                    <select class="form-select mx-auto" style="max-width: 200px;" name="AccommodationType" required>
                        <option value="">Select type</option>
                        <option value="Hotel">Hotel</option>
                        <option value="Motel">Motel</option>
                        <option value="Villa">Villa</option>
                    </select>
                </div>
                <div class="mb-3 d-flex justify-content-center flex-wrap gap-4">
                    <div class="form-check mt-3">
                        <input class="form-check-input" type="checkbox" name="PoolExistence" value="true" />
                        <label class="form-check-label">Pool</label>
                    </div>
                    <div class="form-check mt-3">
                        <input class="form-check-input" type="checkbox" name="SpaCentreExistence" value="true" />
                        <label class="form-check-label">Spa Centre</label>
                    </div>
                    <div class="form-check mt-3">
                        <input class="form-check-input" type="checkbox" name="PeopleWDisabilities" value="true" />
                        <label class="form-check-label">Accessible</label>
                    </div>
                    <div class="form-check mt-3">
                        <input class="form-check-input" type="checkbox" name="WiFi" value="true" />
                        <label class="form-check-label">WiFi</label>
                    </div>
                </div>

                <div class="d-flex justify-content-center gap-2 mt-4">
                    <button type="submit" class="btn btn-success px-5">Add Accommodation</button>
                </div>
            </div>
        </div>
    </form>
</div>
