@model web_project.Models.AccommodationUnit
@{
    ViewBag.Title = "Edit Accommodation Unit";
    int arrangementId = ViewBag.ArrangementId;
}

<div class="card shadow mb-4" style="max-width: 600px; margin:auto;">
    <div class="card-header text-center">
        <h3>Edit Accommodation Unit</h3>
    </div>
    <div class="card-body">
        @if (TempData["EditError"] != null)
        {
            <div class="alert alert-danger text-center">
                @TempData["EditError"]
            </div>
        }

        <form action="@Url.Action("EditAccommodationUnit", "AccommodationUnit")" method="post" class="needs-validation" novalidate>
            <input type="hidden" name="Id" value="@Model.Id" />
            <input type="hidden" name="arrangementId" value="@arrangementId" />

            <div class="mb-3 text-center">
                <label for="MaxGuests" class="form-label fw-bold">Max Guests</label>
                <input type="number" class="form-control mx-auto" style="max-width: 200px;"
                       id="MaxGuests" name="MaxGuests" value="@Model.MaxGuests"
                       @(ViewBag.CanEditNumberOfBeds ? "" : "readonly") />
                @if (!ViewBag.CanEditNumberOfBeds)
                {
                    <small class="text-muted d-block mt-1">Cannot change number of beds because there are active future reservations.</small>
                }
            </div>

            <div class="mb-3 text-center">
                <div class="form-check d-inline-block me-3">
                    <input class="form-check-input" type="checkbox" id="PetsAllowed" name="PetsAllowed" value="true" @(Model.PetsAllowed ? "checked" : "")/>
                    <label class="form-check-label" for="PetsAllowed">Pets Allowed</label>
                </div>
            </div>

            <div class="mb-3 text-center">
                <label for="Price" class="form-label fw-bold">Price</label>
                <input type="number" class="form-control mx-auto" style="max-width: 200px;"
                       id="Price" name="Price" value="@Model.Price" step="0.01" required/>
            </div>

            <div class="d-flex justify-content-center gap-2 mt-4">
                <button type="submit" class="btn btn-primary px-4">Save</button>
                <a href="@Url.Action("Details", "Home", new { id = arrangementId })" class="btn btn-secondary px-4">Cancel</a>
            </div>
        </form>
    </div>
</div>

<script>
    (function () {
        'use strict';
        var forms = document.querySelectorAll('.needs-validation');
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
    })();
</script>
