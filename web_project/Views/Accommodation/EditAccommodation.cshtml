@model web_project.Models.Accommodation
@{
    ViewBag.Title = "Edit Accommodation";
}

<div class="card shadow mb-4" style="max-width: 600px; margin:auto;">
    <div class="card-header text-center">
        <h3>Edit Accommodation</h3>
    </div>
    <div class="card-body">
        <form action="@Url.Action("EditAccommodation", "Accommodation")" method="post">
            <input type="hidden" name="arrangementId" value="@Request.QueryString["arrangementId"]" />
            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="mb-3 text-center">
                <label for="Name" class="form-label fw-bold">Name</label>
                <input type="text" class="form-control mx-auto" style="max-width: 200px;"
                       name="Name" value="@Model.Name" required />
            </div>

            <div class="mb-3 text-center">
                <label for="NumberOfStars" class="form-label fw-bold">Number of Stars</label>
                <input type="number" class="form-control mx-auto" style="max-width: 200px;"
                       name="NumberOfStars" value="@Model.NumberOfStars" min="1" max="5" />
            </div>

            <div class="mb-3 text-center">
                <label for="AccommodationType" class="form-label fw-bold">Accommodation type</label>
                <select class="form-select mx-auto" style="max-width: 200px;" name="AccommodationType" required>
                    <option value="Hotel" @(Model.AccommodationType == web_project.Models.AccommodationType.Hotel ? "selected" : "")>Hotel</option>
                    <option value="Motel" @(Model.AccommodationType == web_project.Models.AccommodationType.Motel ? "selected" : "")>Motel</option>
                    <option value="Villa" @(Model.AccommodationType == web_project.Models.AccommodationType.Villa ? "selected" : "")>Villa</option>
                </select>
            </div>

            <div class="mb-3 d-flex justify-content-center flex-wrap gap-4">
                <div class="form-check mt-3">
                    <input class="form-check-input" type="checkbox" name="PoolExistence" value="true" @(Model.PoolExistence ? "checked" : "") />
                    <label class="form-check-label">Pool</label>
                </div>
                <div class="form-check mt-3">
                    <input class="form-check-input" type="checkbox" name="SpaCentreExistence" value="true" @(Model.SpaCentreExistence ? "checked" : "") />
                    <label class="form-check-label">Spa Centre</label>
                </div>
                <div class="form-check mt-3">
                    <input class="form-check-input" type="checkbox" name="PeopleWDisabilities" value="true" @(Model.PeopleWDisabilities ? "checked" : "") />
                    <label class="form-check-label">Accessible</label>
                </div>
                <div class="form-check mt-3">
                    <input class="form-check-input" type="checkbox" name="WiFi" value="true" @(Model.WiFi ? "checked" : "") />
                    <label class="form-check-label">WiFi</label>
                </div>
            </div>

            <div class="d-flex justify-content-center gap-2 mt-4">
                <button type="submit" class="btn btn-primary px-4">Save</button>
                <a href="@Url.Action("Details", "Home", new {id = ViewBag.ArrangementId })" class="btn btn-secondary px-4">Cancel</a>
            </div>
        </form>
    </div>
</div>
