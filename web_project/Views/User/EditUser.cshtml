@model web_project.Models.User
@{
    ViewBag.Title = "Edit Profile";
}

<div class="d-flex justify-content-center mt-4">
    <div style="width: 100%; max-width: 650px;">

        <div class="card shadow mt-4">
            <div class="card-body">
                <form method="post" action="@Url.Action("EditUser", "User") class="needs-validation" novalidate">
                    <h2 class="mb-4 text-center">Edit @Model.Username's Profile</h2>
                    
                    <input type="hidden" name="Id" value="@Model.Id" />

                    <div class="mx-5">
                        <div class="row">
                            <div class="mb-3 col-6">
                                <label for="username" class="form-label">Username</label>
                                <input type="text" class="form-control" id="username" name="Username" value="@Model.Username" required>
                                <div class="valid-feedback">
                                    Perfect!
                                </div>
                                <div class="invalid-feedback">
                                    Username cannot be empty!
                                </div>
                            </div>
                            <div class="mb-3 col-6">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" class="form-control" id="password" name="Password" value="@Model.Password" required>
                                <div class="valid-feedback">
                                    Perfect!
                                </div>
                                <div class="invalid-feedback">
                                    Password cannot be empty!
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="mb-3 col-6">
                                <label for="firstName" class="form-label">First name</label>
                                <input type="text" class="form-control" id="firstName" name="FirstName" value="@Model.FirstName" required>
                                <div class="valid-feedback">
                                    Perfect!
                                </div>
                                <div class="invalid-feedback">
                                    First name cannot be empty!
                                </div>
                            </div>

                            <div class="mb-3 col-6">
                                <label for="lastName" class="form-label">Last name</label>
                                <input type="text" class="form-control" id="lastName" name="LastName" value="@Model.LastName" required>
                                <div class="valid-feedback">
                                    Perfect!
                                </div>
                                <div class="invalid-feedback">
                                    Last name cannot be empty!
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="mb-3 col-6">
                                <label for="email" class="form-label">Email address</label>
                                <input type="email" class="form-control" id="email" name="Email" value="@Model.Email" required>
                                <div class="valid-feedback">
                                    Perfect!
                                </div>
                                <div class="invalid-feedback">
                                    Email cannot be empty!
                                </div>
                            </div>

                            <div class="col-4 mt-4 mb-4 pt-3">
                                <input class="form-check-input" type="radio" name="Gender" id="female" value="Women" @(Model.Gender == web_project.Models.Gender.Women ? "checked" : "")>
                                <label class="form-check-label" for="female">
                                    Female
                                </label>
                            </div>
                            <div class="col mt-4 mb-4 pt-3">
                                <input class="form-check-input" type="radio" name="Gender" id="male" value="Men" @(Model.Gender == web_project.Models.Gender.Men ? "checked" : "")>
                                <label class="form-check-label" for="male">
                                    Male
                                </label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-floating mb-3 col-6">
                                <input type="date" class="form-control" id="date" name="Date"
                                       value="@(Model.Date != null ? DateTime.ParseExact(Model.Date, "dd/MM/yyyy", System.Globalization.CultureInfo.InvariantCulture).ToString("yyyy-MM-dd") : "")"
                                       required />
                                <label class="mx-2" for="date">Birth date:</label>
                                <div class="valid-feedback">
                                    Perfect!
                                </div>
                                <div class="invalid-feedback">
                                    Birth date cannot be empty!
                                </div>
                            </div>
                        </div>
                    </div>
                   

                    <div class="row mt-3">
                        <div class="d-flex justify-content-center gap-5">
                            <input class="btn btn-primary col-2" type="submit" value="Save">
                            <a href="@Url.Action("Details", "User", new { id = Model.Id })" class="btn btn-secondary col-2">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    (function () {
        'use strict'

        var forms = document.querySelectorAll('.needs-validation')

        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
    })()
</script>