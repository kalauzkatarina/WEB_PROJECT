@model List<web_project.Models.Arrangement>
@{
    ViewBag.Title = "My Arrangements";
}

<h2 class="text-center mb-4">My Arrangements</h2>

@if (Model != null && Model.Count > 0)
{
    foreach (var arrangement in Model)
    {
        <div class="card mb-3 shadow">
            <div class="card-header">
                <h4>@arrangement.Name</h4>
            </div>
            <div class="card-body">
                <p><strong>Location:</strong> @arrangement.Location</p>
                <p><strong>Travel Dates:</strong> @arrangement.TravelStartDate - @arrangement.TravelEndDate</p>

                <div class="mb-2">
                    <h5>Reservations:</h5>
                </div>
                @{
                    var reservations = ViewBag.Reservations as List<web_project.Models.Reservation>;
                    var arrangementReservations = reservations.Where(r => r.ArrangementId == arrangement.Id).ToList();
                    var tourists = ViewBag.Tourists as List<web_project.Models.User>;
                }

                @if (arrangementReservations.Count > 0)
                {
                    <div class="row row-cols-1 row-cols-md-4 g-3">
                        @foreach (var res in arrangementReservations)
                        {
                            var tourist = tourists.FirstOrDefault(u => u.Id == res.TouristId);
                            <div class="col">
                                <div class="card h-100 shadow-sm">
                                    <div class="card-body d-flex flex-column justify-content-between">
                                        <p><strong>Reservation ID:</strong> @res.Id</p>
                                        <p><strong>Tourist:</strong> @(tourist != null ? tourist.FirstName + " " + tourist.LastName : "Unknown")</p>
                                        <p><strong>Status:</strong> @res.Status</p>
                                        <a href="@Url.Action("Details", "Reservation", new { id = res.Id })"
                                           class="btn btn-primary btn-sm mt-2 mx-auto">
                                            View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">No reservations for this arrangement yet.</p>
                }

            </div>
        </div>
    }
}
else
{
    <p class="text-center text-muted">You have not created any arrangements yet.</p>
}
