
@{
    ViewBag.Title = "Index";
}


<div class="d-flex justify-content-center mt-5">
    <div style="width: 100%; max-width: 400px;">
        <div class="card shadow">
            <div class="card-body">
                <h2 class="mb-4 text-center">Login</h2>

                <form action="~/Authentication/Login" method="post" class="needs-validation" novalidate>
                    <div class="mb-3 row">
                        <div class="col mx-5">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" id="username" name="username" placeholder="Enter username" required>
                            <div class="valid-feedback">
                                Perfect!
                            </div>
                            <div class="invalid-feedback">
                                Username cannot be empty!
                            </div>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <div class="col mx-5">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" required>
                            <div class="valid-feedback">
                                Perfect!
                            </div>
                            <div class="invalid-feedback">
                                Password cannot be empty!
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center mt-4">
                        <button type="submit" class="btn btn-primary w-25">Login</button>
                    </div>

                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <div class="alert alert-danger mt-3">
                            @ViewBag.Message
                        </div>
                    }

                    <div class="row">
                        <div class="col-7 text-center mx-3 mt-4">
                            <p>Don't have an account yet?</p>
                        </div>
                        <div class="col mt-3">
                            <a class="btn btn-secondary" href="~/Authentication/Register" role="button">Register</a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

<script>
    (function () {
        'use strict'

        var forms = document.querySelectorAll('.needs-validation')

        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
    })()
</script>