@{
    ViewBag.Title = "Add Accommodation Unit";
    int arrangementId = ViewBag.ArrangementId;
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Add Accommodation Unit</h2>

    <form action="@Url.Action("AddAccommodationUnit", "AccommodationUnit")" method="post" class="needs-validation" novalidate>
        <input type="hidden" name="arrangementId" value="@arrangementId" />

        <div class="card shadow" style="max-width: 600px; margin:auto;">
            <div class="card-body">

                <div class="mb-3 text-center">
                    <label class="form-label fw-bold">Max Guests</label>
                    <input type="number" class="form-control mx-auto" style="max-width: 200px;" name="MaxGuests" placeholder="Enter max guests" required />
                </div>

                <div class="mb-3 text-center">
                    <div class="form-check d-inline-block me-3">
                        <input class="form-check-input" type="checkbox" name="PetsAllowed" value="true" />
                        <label class="form-check-label">Pets Allowed</label>
                    </div>
                </div>

                <div class="mb-3 text-center">
                    <label class="form-label fw-bold">Price</label>
                    <input type="number" class="form-control mx-auto" style="max-width: 200px;" name="Price" step="0.01" placeholder="Enter the price" required />
                </div>

                <div class="d-flex justify-content-center gap-2">
                    <button type="submit" class="btn btn-primary px-4">Add</button>
                    <a href="@Url.Action("Details", "Home", new { id = arrangementId })" class="btn btn-secondary px-4">Cancel</a>
                </div>
            </div>
        </div>
    </form>
</div>


<script>
    (function () {
        'use strict';
        var forms = document.querySelectorAll('.needs-validation');
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
    })();
</script>
